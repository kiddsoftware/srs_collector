{
  "manifest_version": 2,

  "name": "SRS Collector",
  "description": "Save foreign-language text to srscollector.com for looking up unknown words.",
  "version": "0.1",

  "permissions": [
    "http://www.srscollector.com/",
    "contextMenus",
    "activeTab",
    "notifications",
    "storage"
  ],
  "icons": {
    "16": "16.png"
  },
  "background": {
    "scripts": [
      "vendor/jquery-1.10.2.min.js",
      "vendor/rsvp-latest.js",
      "api_key.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "16.png",
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    "16.png"
  ]
}
